---
import '../styles/global.css';

const { title } = Astro.props;
const description = "Go where the pros train.";
const image = "/obsa-preview.png"; // Path to your preview image
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description}>

    <!-- Open Graph Meta Tags (for iMessage, Facebook, LinkedIn, etc.) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://joinobsa.com" /> <!-- Replace with your actual site URL -->

    <!-- Twitter Card Meta Tags (for Twitter previews) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:url" content="https://joinobsa.com" /> <!-- Replace with your actual site URL -->

    <!-- Favicons -->
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" type="image/png" />
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" type="image/png" />

    <!-- Apple Touch Icon (for adding to home screen on iOS) -->
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" sizes="180x180" />

    <!-- Structured Data (JSON-LD) for SEO -->
    <script type="application/ld+json">
      {{
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Ohio Baseball Science Academy",
        "url": "https://joinobsa.com",
        "logo": "/obsa-preview.png",
        "description": {description},
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+1-513-289-3295",
          "contactType": "Customer Service"
        }
      }}
    </script>

<script src="https://js.adsrvr.org/up_loader.1.1.0.js" type="text/javascript"></script>

<script type="text/javascript">

ttd_dom_ready( function() {

if (typeof TTDUniversalPixelApi === 'function') {

var universalPixelApi = new TTDUniversalPixelApi();

universalPixelApi.init("52oazm8", ["nftnzbv"], "https://insight.adsrvr.org/track/up");

}

});

</script>
  </head>

  <body class="bg-black text-white flex flex-col gap-20">
    <slot />
  </body>
</html>
